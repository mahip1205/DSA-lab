#include <bits/stdc++.h>
using namespace std;
void swap(int arr[],int i,int j)
{
    int temp=arr[i];
    arr[i]=arr[j];
    arr[j]=temp;
}
int partition(int arr[],int m,int p)
{
    int v=arr[m];
    int i=m;
    int j=p-1;
    do
    {
        do
    {
        i=i+1;
    } while (arr[i]<=v);
    while (arr[j]>v)
    {
        j=j-1;
    }
    if(i<j)
    {
        swap(arr,i,j);
    }
    } while (i<j);
    swap(arr,j,m);
    return j;
}
void quickSort(int arr[],int low,int high)
{
    if(low<high)
    {
        int p=partition(arr,low,high+1);
        quickSort(arr,low,p-1);
        quickSort(arr,p+1,high);
    }
}
int main()
{
    int n;
    cout<<"Enter size of array: ";
    cin>>n;
    int arr[n];
    cout<<"Enter elements in array: ";
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    quickSort(arr,0,n-1);
    cout<<"Sorted array :"<<endl;
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    return 0;
}
